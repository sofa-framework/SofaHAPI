# CMake package configuration file for the SofaHAPI plugin.
# It defines the following variables:
# - SofaHAPI_INCLUDE_DIRS
# - SofaHAPI_LIBRARIES

@PACKAGE_INIT@

set_and_check(SOFAHAPI_INCLUDE_DIR "@PACKAGE_SOFAHAPI_INCLUDE_DIR@")

check_required_components(SofaHAPI)

find_package(SofaGeneral REQUIRED)
find_package(HAPI REQUIRED)
find_package(H3DUtil REQUIRED)

if(NOT TARGET SofaHAPI)
	include("${CMAKE_CURRENT_LIST_DIR}/SofaHAPITargets.cmake")
endif()

set(SofaHAPI_LIBRARIES SofaHAPI)
set(SofaHAPI_INCLUDE_DIRS ${SOFAHAPI_INCLUDE_DIR} ${SofaGui_INCLUDE_DIRS})
